[ req ]
default_bits       = 2048
prompt             = no
default_md         = sha256
x509_extensions    = v3_req
distinguished_name = req_distinguished_name

[ req_distinguished_name ]
CN = {{ monitoring_srv }}

[ v3_req ]
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = {{ monitoring_srv }}
IP.1 = {{ monitoring_ip }}